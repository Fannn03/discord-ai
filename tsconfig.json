{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "strict": true,
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@configs/*": ["configs/*"],
      "@domains/*": ["domains/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  }
}